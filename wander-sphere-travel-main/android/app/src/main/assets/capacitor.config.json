{
	"appId": "com.onenomadsolutions.app",
	"appName": "WanderSphere",
	"webDir": "dist",
	"server": {
		"androidScheme": "https"
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#3b82f6",
			"androidScaleType": "CENTER_CROP",
			"showSpinner": true,
			"spinnerColor": "#ffffff"
		},
		"Geolocation": {
			"permissions": [
				"location"
			]
		},
		"Camera": {
			"permissions": [
				"camera",
				"photos"
			]
		}
	}
}
